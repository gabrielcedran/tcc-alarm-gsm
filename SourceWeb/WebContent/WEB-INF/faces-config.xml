<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<managed-bean>
		<managed-bean-name>RastrearBean</managed-bean-name>
		<managed-bean-class>br.fav.alarme.android.web.controller.RastrearBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<navigation-rule>
		<from-view-id>rastrear.jsp</from-view-id>
		<navigation-case>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>resultadoRastrear.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>falha</from-outcome>
			<to-view-id>erroRastrear.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>resultadoRastrear.jsp</from-view-id>
		<navigation-case>
			<from-outcome>voltar</from-outcome>
			<to-view-id>rastrear.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>erroRastrear.jsp</from-view-id>
		<navigation-case>
			<from-outcome>voltar</from-outcome>
			<to-view-id>rastrear.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
